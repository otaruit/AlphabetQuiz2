<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="187"
        motion:motionInterpolator="cubic(1,0,0,0.98)">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe motion:maxAcceleration="50"
            motion:maxVelocity="8" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/black_overlay" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_editor_absoluteY="139dp"
            android:layout_height="462dp"
            motion:layout_editor_absoluteX="133dp"
            android:layout_width="352dp"
            android:id="@+id/your_character" />
        <Constraint
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/light_blue_A400" />
        </Constraint>
    </ConstraintSet>
</MotionScene>