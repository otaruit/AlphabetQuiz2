<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvatarContainerFragment">

    <LinearLayout
        android:id="@+id/avatar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_display"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        tools:layout_editor_absoluteY="136dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Lv.%d"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:progressDrawable="@drawable/progressbar" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:elevation="3dp">

            <ImageView
                android:id="@+id/your_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|center"
                android:elevation="5dp"
                android:src="@drawable/character_yusha_01_red" />

            <ImageView
                android:id="@+id/item_building"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|center"
                android:elevation="5dp"
                android:src="@drawable/yama_01"
                android:translationX="-90dp"
                android:translationY="8dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_flying1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center"
                android:elevation="5dp"
                android:src="@drawable/ufo_08"
                android:translationX="-90dp"
                android:translationY="-150dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_ground1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center"
                android:elevation="5dp"
                android:src="@drawable/kinoko_blue"
                android:translationX="90dp"
                android:translationY="8dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_ground2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom|center"
                android:elevation="5dp"
                android:src="@drawable/takibi_on"
                android:translationX="-60dp"
                android:translationY="8dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_ground3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center"
                android:elevation="5dp"
                android:src="@drawable/pancake_butter_dish_three"
                android:translationX="50dp"
                android:translationY="8dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_flying2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center"
                android:elevation="5dp"
                android:src="@drawable/star_lightyellow"
                android:translationX="80dp"
                android:translationY="-130dp"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mapTile_left"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/maptile_jimen_sogen_02_left" />

            <ImageView
                android:id="@+id/mapTile_center"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/green_center"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/mapTile_center2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/green_center"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/mapTile_right"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/maptile_jimen_sogen_02_right" />
        </LinearLayout>

        <TextView
            android:id="@+id/label_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/black_overlay_square"
            android:fontFamily="@font/kosugimaru"
            android:padding="5dp"
            android:text="@string/text_name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
    </LinearLayout>

</FrameLayout>