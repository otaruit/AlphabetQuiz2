<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_bg"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <!--    <com.airbnb.lottie.LottieAnimationView-->
    <!--        android:id="@+id/correct"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginStart="5dp"-->
    <!--        android:layout_marginTop="40dp"-->
    <!--        android:layout_marginEnd="6dp"-->
    <!--        android:elevation="5dp"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="parent"-->
    <!--        app:lottie_rawRes="@raw/correct" />-->

    <TextView
        android:id="@+id/label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_name"
        android:textColor="#304FFE"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="だい" />

        <TextView
            android:id="@+id/quiz_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:width="50dp"
            android:height="50dp"
            android:background="@drawable/question_num_btn_bg"
            android:textAlignment="center"
            android:text="@string/question_num"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="もん" />

    </LinearLayout>

    <TextView
        android:id="@+id/quiz_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kosugimaru"
        android:gravity="center_horizontal"
        android:text="@string/question_alphabet"
        android:textSize="60sp" />


    <TextView
        android:id="@+id/text_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/kosugimaru"
        android:gravity="center_horizontal"
        android:text="@string/question_text"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/answer1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/select_btn_bg"
                android:onClick="checkAnswer"
                android:text="@string/answer_1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/answer2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/select_btn_bg"
                android:onClick="checkAnswer"
                android:text="@string/answer_2"
                android:textSize="48sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/answer3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/select_btn_bg"
                android:onClick="checkAnswer"
                android:text="@string/answer_3"
                android:textSize="48sp" />

            <Button
                android:id="@+id/answer4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/select_btn_bg"
                android:onClick="checkAnswer"
                android:text="@string/answer_4"
                android:textSize="48sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/correct_answer_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/kosugimaru"
        android:text="@string/correct_num_str"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/wrong_answer_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/kosugimaru"
        android:text="@string/incorrect_num_str"
        android:textSize="20sp" />


</LinearLayout>

