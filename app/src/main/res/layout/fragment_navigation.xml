<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <ImageButton
        android:id="@+id/tryAgainBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/green_oval"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        android:src="@android:drawable/stat_notify_sync"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back_to_title"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/question_num_btn_bg"
        android:contentDescription="back_to_menu"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_media_play"
        app:backgroundTint="@color/yellow"
        app:layout_constraintEnd_toStartOf="@+id/tryAgainBtn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>