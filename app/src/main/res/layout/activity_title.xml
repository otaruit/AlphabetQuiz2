<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scaleType="centerInside"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/weather_cloudy_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        tools:visibility="visible">


        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/kosugimaru"
            android:text="@string/appTitle"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/your_character"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:elevation="5dp"
            android:src="@drawable/woman" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mapTile_left"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/maptile_jimen_sogen_02_left" />

            <ImageView
                android:id="@+id/mapTile_center"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/green_center" />

            <ImageView
                android:id="@+id/mapTile_center2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/green_center" />

            <ImageView
                android:id="@+id/mapTile_right"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/maptile_jimen_sogen_02_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_one_alphabet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_selector"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:alpha="0.8"
                android:text="いちもじ"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_selector"
                android:text="@string/oneWord"
                android:textColor="@color/black"
                android:alpha="0.8"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_new_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:background="@drawable/btn_selector"
                android:text="@string/newGame"
                android:alpha="0.8"
                android:textSize="24sp"
                app:backgroundTint="@null" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>